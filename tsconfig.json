{
    "extends": "@dyb-dev/ts-config/react",
    "include": [
        ".next/types/**/*.ts",
        "dist/types/**/*.ts",
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "next-env.d.ts",
        "next.config.ts"
    ],
    "exclude": ["node_modules", "**/node_modules", ".history"],
    "compilerOptions": {
        // 指定要包含的类型定义文件
        "types": ["@dyb-dev/ts-config/types"],
        // 指定用于存储 TypeScript 编译器在增量编译模式下生成的编译信息的文件路径，以便下次编译时可以使用
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo",
        // 设置基础路径，解决模块导入路径问题
        "baseUrl": "./",
        // 配置路径映射，简化模块导入路径
        "paths": {
            "@/*": ["./src/*"]
        },
        // 允许编译 js 文件，可混合使用 .js 和 .ts 文件
        "allowJs": true,
        // 启用增量编译模式，加快速度
        "incremental": true,
        // 保留 JSX 语法不转换，交给 Next.js 处理
        "jsx": "preserve",
        // 使用 Next.js 提供的 ts 插件，优化类型体验
        "plugins": [
            {
                "name": "next"
            }
        ]
    }
}
